doctype html
html
  head
    title Create/Update Home
  body
    h1 Create/Update Home
    form(action='/create-update', method='POST')
      .form-group
        label(for='name') Name:
        input#name.form-control(type='text', name='name', required)
      .form-group
        label(for='address') Address:
        input#address.form-control(type='text', name='address', required)
      .form-group
        label(for='price') Price:
        input#price.form-control(type='number', name='price', required)
      button.btn.btn-primary(type='submit') Save
